# Secret key for Django. Keep this private!
DJANGO_SECRET_KEY="your-secret-key-here"

# Allowed origins for CORS (frontend URLs that can make requests to this backend)
# NOTE: Only include scheme + domain, no paths
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,https://<your-frontend-domain.vercel.app>

# Allowed hosts for Django to serve. Add your domain(s) here
ALLOWED_HOSTS=<your-backend-domain.com>,<www.your-backend-domain.com>,localhost,127.0.0.1

# Use SQLite or Postgres. Set to false for production (Postgres)
USE_SQLITE=true

# ----------------------------
# Database settings (Postgres)
# ----------------------------
DB_NAME=your_db_name        # Name of your database
DB_USER=your_db_user        # Database username
DB_PASSWORD=your_db_password  # Database password
DB_HOST=db                  # Service name in docker-compose
DB_PORT=5432                # Postgres port

# ----------------------------
# AI provider API keys
# ----------------------------
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key
GOOGLE_API_KEY=your_google_api_key
DEEPSEEK_API_KEY=your_deepseek_api_key
GROQ_API_KEY=your_groq_api_key

# ----------------------------
# Notes
# ----------------------------
# 1. After cloning the repo, copy this to `.env` and fill in all keys.
# 2. Ensure your frontend URL is included in CORS_ALLOWED_ORIGINS.
